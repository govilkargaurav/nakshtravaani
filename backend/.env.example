# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database URLs
MONGODB_URI=mongodb://localhost:27017/astrology
POSTGRES_URI=postgresql://postgres:password@localhost:5432/astrology
REDIS_URI=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OTP Configuration
OTP_EXPIRES_IN=300000
DUMMY_OTP=123456

# SMS Provider (MSG91/TextLocal)
SMS_PROVIDER=dummy
MSG91_API_KEY=your-msg91-api-key
MSG91_TEMPLATE_ID=your-template-id
TEXTLOCAL_API_KEY=your-textlocal-api-key
TEXTLOCAL_SENDER=TXTLCL

# Email Configuration
EMAIL_PROVIDER=dummy
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_SECRET_KEY=admin-secret-key-for-testing

# Timezone
DEFAULT_TIMEZONE=Asia/Kolkata

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100